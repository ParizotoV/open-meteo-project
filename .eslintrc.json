{
    "env": {
        "browser": true,
        "es2021": true,
        "jest": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:react/recommended",
        "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "react-hooks",
        "@typescript-eslint",
        "prettier"
    ],
    "rules": {
        "react/react-in-jsx-scope": "off",
        "spaced-comment": "error",
        "quotes": [
            "error",
            "single"
        ],
        "no-duplicate-imports": "error",
        "react/prop-types": 0,
        "@typescript-eslint/no-explicit-any": "off",
        "camelcase": "off"
    },
    "settings": {
        "import/resolver": {
            "typescript": {}
        }
    }
}